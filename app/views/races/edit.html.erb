<%= provide(:title, 'Edit Race Entry') %>
<h3>Edit race entry</h3>

<div class="row">
	<div class="col-sm-6">
		<%= form_for(@race, class: "form-group") do |f| %>
		<div class="form-group">
			<%= render 'shared/error_messages', object: f.object%>
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control"%>

			<%= f.label "Race Type" %>
			<%= f.select(:racetype, [['Running',1],['Swimming',2],['Biking',3],['Triathlon',4]])%>

			<%= f.label "Distance (in mi)" %>
			<%= f.text_field :distance,  placeholder: "How long was the race? (in mi)", class: "form-control"%>

			<%= f.label :location %>
			<%= f.text_field :location, class: "form-control" %>

			<%= f.label :bibnumber, "Bib Number" %>
			<%= f.text_field :bibnumber, class: "form-control"%>

			<% if @race.time[:hours]%>
				<% @edit_race_time = @race.time[:hours] + ":" + 
					@race.time[:minutes] + ":" + 
					@race.time[:seconds] %>
			<% else %>
				<% @edit_race_time = "Enter a time" %>
			<% end %>
			<%= f.label :time %>
			<%= f.text_field :time, 
					value: @edit_race_time, class: "form-control"%>

			<%= f.label :date %>
			<%= f.text_field :date, class: "form-control" %>

			<%= f.label :description %>
			<%= f.text_area :description, class: "form-control" %>


			<%= f.submit "Submit race changes", class: "btn btn-large btn-primary form-control" %>
		</div>
		<% end %>
	</div>
</div>

