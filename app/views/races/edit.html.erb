<%= provide(:title, 'Edit Race Entry') %>
<h3>Edit race entry</h3>

<div class="row">
	<div class="span6">
		<%= form_for(@race) do |f| %>
			<%= render 'shared/error_messages', object: f.object%>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :racetype %>
			<%= f.select(:racetype, [['Running',1],['Swimming',2],['Biking',3],['Triathlon',4]]) %>

			<%= f.label :distance %>
			<%= f.text_field :distance,  placeholder: "How long was the race?"%>

			<%= f.label :location %>
			<%= f.text_field :location %>

			<%= f.label :bibnumber, "Bib Number" %>
			<%= f.text_field :bibnumber%>

			<%= f.label :time %>
			<%= f.text_field :time, 
				value: @race.time[:hours] + ":" + 
						@race.time[:minutes] + ":" + 
						@race.time[:seconds]%>

			<%= f.label :date %>
			<%= f.text_field :date %>

			<%= f.label :description %>
			<%= f.text_field :description %>


			<%= f.submit "Submit race changes", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

