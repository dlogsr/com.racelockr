<%= provide(:title, 'Edit Race Entry') %>
<h3>Edit race entry</h3>

<div class="row">
	<div class="col-sm-6">
		<%= form_for(@race, class: "form-horizontal") do |f| %>
		<div class="form-group">
			<%= render 'shared/error_messages', object: f.object%>
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control"%>

			<%= f.label :racetype %>
			<%= f.select(:racetype, [['Running',1],['Swimming',2],['Biking',3],['Triathlon',4]])%>

			<%= f.label :distance %>
			<%= f.text_field :distance,  placeholder: "How long was the race?", class: "form-control"%>

			<%= f.label :location %>
			<%= f.text_field :location, class: "form-control" %>

			<%= f.label :bibnumber, "Bib Number" %>
			<%= f.text_field :bibnumber, class: "form-control"%>

			<%= f.label :time %>
			<%= f.text_field :time, 
				value: @race.time[:hours] + ":" + 
						@race.time[:minutes] + ":" + 
						@race.time[:seconds], class: "form-control"%>

			<%= f.label :date %>
			<%= f.text_field :date, class: "form-control" %>

			<%= f.label :description %>
			<%= f.text_area :description, class: "form-control" %>


			<%= f.submit "Submit race changes", class: "btn btn-large btn-primary form-control" %>
		</div>
		<% end %>
	</div>
</div>

