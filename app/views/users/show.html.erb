<%= provide(:title, @user.name) %>
<div class="row">
	<aside class="span3">
		<section>
			<%= render 'shared/user_info', user: @user %>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="span8">
	<%= render 'follow_form' if signed_in? %>
		<h3>Races (<%= @user.races.count %>)</h3>
		<%= render 'shared/race_list' %>

		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>
