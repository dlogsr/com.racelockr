<%= provide(:title, @title) %>
<div class="row">
	<aside class="col-md-3 col-sm-4">
		<div class="row">
			<section class="col-sm-12">
				<%= render 'shared/user_info', user: @user %>
			</section>
			<section class="col-sm-12">
				<%= render 'shared/stats' %>
			</section>
		</div>
		<div class="row">
			<section class="col-sm-12">
				<a class="btn btn-large btn-primary" href="<%= new_race_path %>">Add a Race</a>
			</section>
		</div>
	</aside>
	<div class="col-md-9 col-sm-8">
		<h3>Races (<%= @user.races.count %>)</h3>
		<%= render 'shared/race_list' %>
	</div>
</div>
