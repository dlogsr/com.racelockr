<% @user ||= current_user %>
<div class="col-sm-12">
	<div class="row stats">
		<div class="col-xs-4">
			<a href="<%= following_user_path(@user) %>">
				<strong id="following" class="stat">
					<%= @user.followed_users.count %>
				</strong>
				following
			</a>
		</div>
		<div class="col-xs-4">
			<a href="<%=followers_user_path(@user) %>">
				<strong id="followers" class="stat">
					<%= @user.followers.count %>
				</strong>
				followers
			</a>
		</div>
		<div class="col-xs-4">
			<a href="<%=races_user_path(@user) %>">
				<strong id="races" class="stat">
					<%= @user.races.count %>
				</strong>
				races
			</a>
		</div>
	</div>
</div>