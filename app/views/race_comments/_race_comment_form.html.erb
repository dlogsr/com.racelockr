<%= form_for(@race_comment) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: "Leave a comment" %>
	</div>
	<%= f.hidden_field :race_id, value: @race.id%>
	<%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>