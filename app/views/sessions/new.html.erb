<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
	<div class=" col-xs-12">
		<%= form_for(:session, url: sessions_path, class: "form-horizontal") do |f| %>
		<div class="row">
			<div class="form-group col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
				<%= f.label :email %>
				<%= f.text_field :email, class: "form-control" %>

				<%= f.label :password %>
				<%= f.password_field :password, class: "form-control" %>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
			<%= f.submit "Sign in", class: "btn btn-large btn-primary form-control" %>
			</div>
			<% end %>
		</div>
		<div class="row center">
			<p>New user? <%= link_to "Sign up now!", signup_path %></p>
		</div>
	</div>
</div>